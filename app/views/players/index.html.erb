<div class="row" style="padding-top: 10px;">
  <div class="col"> </div>
    <div class="col-md-12">

      <h2>List of players: </h2>

    <p>
        <%= link_to "Add new player", new_player_path, class: 'btn btn-lg btn-info' %>
    </p>

        <% end %>

    <table class="table table-hover">

      <thead>

        <tr class="table-primary">

          <th>Name</th>
          <th>Surname</th>
          <th>Age</th>
          <th>Nationality</th>
          <th>Position</th>
          <th>Club</th>
          <th colspan="3">Editing Options</th>

        </tr>

      </thead>

      <tbody>
          <% @players.each do |player| %>
        <tr class="table-success">
          <td><%= player.name %></td>
          <td><%= player.surname %></td>
          <td><%= player.age %></td>
          <td><%= player.nationality %></td>
          <td><%= player.position %></td>
          <td><%= player.club %></td>

          <td><%= link_to 'Show', player_path(player), class: 'btn btn-sm btn-info'%></td>
          <td><%= link_to 'Edit', edit_player_path(player), class: 'btn btn-sm btn-warning' %></td>
          <td><%= link_to 'Delete', player_path(player), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %></td>
          
        </tr>

          <% end %>

      </tbody>
      
    </table>

    </div>
  <div class="col"> </div>
</div>
