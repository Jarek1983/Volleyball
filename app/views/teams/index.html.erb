<div class="row" style="padding-top: 100px;">

  <%= will_paginate @teams %>

  <div class="col"> </div>
    <div class="col-md-12">

      <h2>List of teams: </h2>

        <% if current_user && current_user.admin? %>

        <p>
          <%= link_to "Add new team", new_team_path, class: 'btn btn-lg btn-info' %>
        </p>

        <% end %>
    
      <div class="row">

          <% @teams.each do |team| %>

      <div class="col-md-4">
        <div class="card"> 
          <div class="card-topper">

            <% if team.photo.present? %>

              <%= image_tag team.photo.url(:thumb), style: "width:50%" %>

            <% else %>

              No image

            <% end %>

          </div>

          <div class="card-block">

                <%= link_to 'More', team_path(team), class: 'btn btn-sm btn-info'%>

              <% if current_user && current_user.admin? %>

                <%= link_to 'Edit', edit_team_path(team), class: 'btn btn-sm btn-warning' %>
                <%= link_to 'Delete', team_path(team), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %>

              <% end %>

          </div>
      </div>
      </div>
    <% end %>
</div>
