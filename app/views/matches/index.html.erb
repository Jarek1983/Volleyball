<div class="row" style="margin-left: 1rem; margin-right: 1rem;">
  <div class="col"> </div>
    <div class="col-sm-12">

      <%= will_paginate @matches, previous_label: "<", next_label: ">" %>

        <div class="col-sm-12">

            <h2>List of matches: </h2>

              <% if current_user && current_user.admin? %>

            <p>
              <%= link_to "Add new match", new_match_path, class: 'btn btn-lg btn-info' %>
            </p>

              <% end %>
        
            <div class="row" style= "margin-bottom: 0.5rem;">

                <% @matches.each do |match| %>

                  <div class="col-12 col-sm-6 col-md-4" style="padding: 0.5rem;">
                    <div class="card"> 
                      <div class="card-block">

                        <div class="card-title text-sm-left">
                          <p> <%= match.home&.name %> - <%= match.quest&.name %></p>
                          <!-- <%= match.score_team_A_match %> : <%= match.score_team_B_match %>  -->
                        </div>

                            <%= link_to 'More', match_path(match), class: 'btn btn-sm btn-info'%>

                          <% if current_user && current_user.admin? %>

                            <%= link_to 'Edit', edit_match_path(match), class: 'btn btn-sm btn-warning' %>
                            <%= link_to 'Delete', match_path(match), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %>

                          <% end %>

                      </div>
                    </div>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
  <div class="col"> </div>
</div>
