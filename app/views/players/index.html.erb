<div class="row" style="padding-top: 100px;">
  <div class="col"> </div>
    <div class="col-md-12">

      <h2>List of players: </h2>

    <p>
        <%= link_to "Add new player", new_player_path, class: 'btn btn-lg btn-info' %>
    </p>
    
   <div class="row">

          <% @players.each do |player| %>

      <div class="col-md-4">
        <div class="card"> 
          <div class="card-topper">

            <% if player.photo.present? %>

              <%= image_tag player.photo.url(:thumb), style: "width:50%" %>

            <% else %>

              No image

            <% end %>

          </div>

          <div class="card-block">

            <h5 class="card-title">
              <%= player.name + " " + player.surname  %>
            </h5>

             <%= link_to 'More', player_path(player), class: 'btn btn-sm btn-info'%>
             <%= link_to 'Edit', edit_player_path(player), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Delete', player_path(player), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %>

          </div>
      </div>
      </div>
    <% end %>
</div>